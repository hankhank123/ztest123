<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:s="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    >
    
	<Dialog
	    class="sapUiPopupWithPadding"
	    title="{i18n>createBillingPlan}"
	    afterOpen="afterOpen"
	    beforeOpen="beforeOpen"
	    afterClose="afterClose" >
	    
		<content>
		    
			<smartForm:SmartForm
				layout="ResponsiveGridLayout"
				editable="true"
                >
			    
			    <smartForm:layout>
                    <smartForm:Layout
                        columnsM="1"
                        columnsL="1"
                        columnsXL="1"
                        emptySpanS="0"
                        emptySpanM="0"
                        emptySpanL="2"
                        emptySpanXL="4"
                        labelSpanS="6"
                        labelSpanM="6"
                        labelSpanL="6"
                        labelSpanXL="6"
                        >
                    </smartForm:Layout>
                </smartForm:layout>
			    
			    <smartForm:Group>
					<smartForm:GroupElement>
                        <s:SmartField id="idFieldBusinessPartner" value="{BusinessPartner}" />
                    </smartForm:GroupElement>

					<smartForm:GroupElement>
                        <s:SmartField id="idFieldContractAccount" value="{ContractAccount}" />
                    </smartForm:GroupElement>

					<smartForm:GroupElement>
                        <s:SmartField id="idFieldPlanType" value="{CABillgPlnType}" />
                    </smartForm:GroupElement>

					<smartForm:GroupElement>
                        <s:SmartField id="idFieldExternalReference" value="{CABillgPlnExternalReference}" />
                    </smartForm:GroupElement>
                </smartForm:Group>
                
			</smartForm:SmartForm>
			
		</content>

		<beginButton>
			<Button
			    id="onCreatePress"
			    press="onCreatePress"
			    text="{i18n>create}" />
		</beginButton>
		<endButton>
			<Button
			    id="onCancelPress"
			    press="onCancelPress"
			    text="{i18n>cancel}" />
		</endButton>

	</Dialog>
</core:FragmentDefinition>